<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="HumbleHackers"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/heading1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Member 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imageView_suhas"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:contentDescription="Suhas"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/suhasks"
                    android:backgroundTintMode="src_over" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_suhas_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suhas K S"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/text_suhas_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leetcode Guardian"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Member 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imageView_soundar"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:contentDescription="Soundar"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rmsoundar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_soundar_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soundar Arunachalam R M"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/text_soundar_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solves Leetcode in ASM"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Member 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imageView_sethu"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:contentDescription="Sethupathy"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/sethupathyr" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_sethu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sethupathy R"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/text_sethu_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibe Coder"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>